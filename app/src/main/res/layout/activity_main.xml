<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.tourguide.MainActivity">

    <TextView
        android:id="@+id/uq"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/UQ"
        android:gravity="center"
        android:text="@string/place_UQ"
        android:textColor="#ffffff"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/south_bank"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/south_bank"
        android:gravity="center"
        android:text="@string/place_South_bank"
        android:textColor="#ffffff"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/art_gallery"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gallery"
        android:gravity="center"
        android:text="@string/place_Modern_Art_Gallery"
        android:textColor="#ffffff"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/mt_lookout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/mt_lookout"
        android:gravity="center"
        android:text="@string/plact_MtCootTha_Lookout"
        android:textColor="#ffffff"
        android:textSize="32sp" />
</LinearLayout>
